<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.alto.mover"
    version="0.1.0">

    <name>Mover</name>
    <description>SFTP Plugin</description>

    <asset src="www/mover.js" target="js/mover.js"/>

    <js-module src="www/mover.js" name="mover">
        <clobbers target="mover" />
    </js-module>

    <!-- Needed for bgs-core plugin -->
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>

    <platform name="android">

        <js-module src="www/backgroundService.js" name="BackgroundService"></js-module>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Mover">
                <param name="android-package" value="com.alto.mover.Mover"/>
            </feature>
            <feature name="BackgroundServicePlugin">
                <param name="android-package" value="com.alto.mover.backgroundservice.BackgroundServicePlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <receiver android:name="com.alto.mover.backgroundservice.BootReceiver">
                <intent-filter>
                    <action android:name="android.intent.action.BOOT_COMPLETED"></action>
                </intent-filter>
            </receiver>
            <service android:name="com.alto.mover.MoverService">
               <intent-filter>
                  <action android:name="com.alto.mover.MoverService" />
               </intent-filter>
            </service>
        </config-file>

        <source-file src="lib/android/jsch-0.1.51.jar" target-dir="libs" />
        <source-file src="src/android/Mover.java" target-dir="src/com/alto/mover" />
        <source-file src="src/android/MoverService.java" target-dir="src/com/alto/mover" />

        <source-file src="src/android/BackgroundService.java" target-dir="src/com/alto/mover/backgroundservice" />
        <source-file src="src/android/BackgroundServicePlugin.java" target-dir="src/com/alto/mover/backgroundservice" />
        <source-file src="src/android/BackgroundServicePluginLogic.java" target-dir="src/com/alto/mover/backgroundservice" />
        <source-file src="src/android/BootReceiver.java" target-dir="src/com/alto/mover/backgroundservice" />
        <source-file src="src/android/PropertyHelper.java" target-dir="src/com/alto/mover/backgroundservice" />
        <source-file src="src/android/ReflectionHelper.java" target-dir="src/com/alto/mover/backgroundservice" />

        <source-file src="aidl/android/BackgroundServiceApi.aidl" target-dir="src/com/alto/mover/backgroundservice" />
        <source-file src="aidl/android/BackgroundServiceListener.aidl" target-dir="src/com/alto/mover/backgroundservice" />

     </platform>
</plugin>
